<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <ImageView
        android:src="@drawable/background"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="391.0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:id="@+id/ivBG" />

    <ImageView
        android:src="@drawable/header"
        android:layout_width="385.0dp"
        android:layout_height="135.0dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginBottom="0.0dp"
        android:layout_marginRight="0.0dp"
        android:layout_marginLeft="0.0dp"
        android:layout_marginTop="0.0dp"
        android:id="@+id/ivHeader" />

    <ImageView
        android:src="@drawable/pic"
        android:layout_width="215.0dp"
        android:layout_height="215.0dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginBottom="36.0dp"
        android:layout_marginRight="0.0dp"
        android:layout_marginLeft="0.0dp"
        android:layout_marginTop="120.0dp"
        android:id="@+id/ivPic" />

    <TextView
        android:text="YOUR NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginBottom="0.0dp"
        android:layout_marginRight="0.0dp"
        android:layout_marginLeft="0.0dp"
        android:layout_marginTop="375.0dp"
        android:textSize="45px"
        android:textStyle="bold" 
        android:id="@+id/txtName"
        />

    <EditText
        android:inputType="textMultiLine"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="0.0dp"
        android:layout_marginRight="0.0dp"
        android:layout_marginLeft="0.0dp"
        android:layout_marginTop="400.0dp"
        android:id="@+id/editTxtLine"
        />

    <TextView
        android:text="BSIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginBottom="0.0dp"
        android:layout_marginRight="0.0dp"
        android:layout_marginLeft="0.0dp"
        android:layout_marginTop="410.0dp"
        android:textSize="45px"
        android:textStyle="bold"
        android:id="@+id/txtCourse"
        />

    <TextView
        android:text="COURSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginBottom="0.0dp"
        android:layout_marginRight="0.0dp"
        android:layout_marginLeft="0.0dp"
        android:layout_marginTop="438.0dp"
        android:textSize="30px"
        android:id="@+id/txtCourseLabel" 
        />

    <TextView
        android:text="ID No.: 1201234"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginBottom="0.0dp"
        android:layout_marginRight="0.0dp"
        android:layout_marginLeft="0.0dp"
        android:layout_marginTop="455.0dp"
        android:textSize="32px"
        android:textStyle="bold"
        android:id="@+id/txtIDNum"
        />

    <ImageView
        android:src="@drawable/sign"
        android:layout_width="120.0dp"
        android:layout_height="50.0dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginBottom="0.0dp"
        android:layout_marginRight="0.0dp"
        android:layout_marginLeft="0.0dp"
        android:layout_marginTop="340.0dp"
        android:id="@+id/txtSignature" 
        />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="480dp"
        android:background="#ff009688" 
        android:id="@+id/btnNext"
        />



</RelativeLayout>